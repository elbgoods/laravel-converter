{
    "name": "elbgoods/laravel-unit-converter",
    "type": "library",
    "description": "Opinionated wrapper around pimlie/php-unit-conversion.",
    "keywords": [
        "elbgoods",
        "laravel-unit-converter",
        "laravel",
        "unit-converter"
    ],
    "homepage": "https://github.com/elbgoods/laravel-unit-converter",
    "license": "MIT",
    "authors": [
        {
            "name": "Tom Witkowski",
            "email": "dev.gummibeer@gmail.com",
            "homepage": "https://gummibeer.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/support": "^6.0",
        "php-unit-conversion/php-unit-conversion": "^1.2",
        "spatie/enum": "^2.3"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Elbgoods\\LaravelUnitConverter\\LaravelUnitConverterServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Elbgoods\\LaravelUnitConverter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elbgoods\\LaravelUnitConverter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
